<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:text="@string/legend_category"
        android:id="@+id/list_entry_category_name"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Include In Session"
        android:id="@+id/includeInSessionCheckBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Include In Analysis"
        android:id="@+id/includeInAnalysisCheckBox" />
</LinearLayout>

